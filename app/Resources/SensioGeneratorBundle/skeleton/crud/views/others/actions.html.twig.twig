
                {%- for action in record_actions %}


                        <a class="btn" href="{{ "{{ path('" ~ route_name_prefix ~ "_" ~ action ~ "', { 'id': entity.id }) }}" }}">
                            {%- if action == "show" %}
                                 <i class="icon-eye-open"></i>
                            {%- elseif action == "edit" %}
                                 <i class="icon-pencil"></i>
                            {%- endif %}
                            {{ action }}
                         </a>

                {%- endfor %}
