{% extends "FOSUserBundle::layout.simple.html.twig" %}

{% trans_default_domain 'dolopedia' %}

{% block fos_user_title %}
    {{ 'registration.restorePassword'|trans() }}
{% endblock fos_user_title %}

{% block fos_user_content %}
    <div class="formWindow-control">
        <p>{{ 'registration.message.resetAlreadyRequested'|trans() }}</p>
    </div>
    <hr/>
    <div class="formWindow-control last">
        <a href="{{ path('public.home') }}" class="btn btn-dark-grey"><span class="icon-message-reply"></span> Volver</a>
    </div>
{% endblock fos_user_content %}
