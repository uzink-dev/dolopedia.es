{% extends '::admin.html.twig' %}

{% block body %}

    <div class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container-fluid">
            {% block headerlogo %}
            {% endblock %}
            <div class="navbar-collapse collapse">
                {{ knp_menu_render('main', {'currentClass': 'active', 'template': 'GeneratorBundle:Menu:knp_menu.html.twig'}) }}
            </div>
        </div>
    </div>

    <!-- Brand and toggle get grouped for better mobile display -->


    <div id="crud-layout">

        <div class="container-fluid">

            <div class="row-fluid">

                <div class="col-md-12">

                    <header id="overview">

                        <h1>{% block title %}Administraci√≥n{% endblock title %}</h1>

                    </header>

                </div>

                <div class="clearfix"></div>
            </div>

            <div class="row-fluid">

                <div class="col-md-12">

                    <div class="row-fluid breadcrumbs-wrapper">

                        <div class="col-md-6">

                            <div class="breadcrumbs">

                                {{ wo_render_breadcrumbs() }}

                            </div>

                        </div>


                        <div class="col-md-6">

                            <div class="btn-group pull-right">

                                {% block top_buttons %}

                                {% endblock top_buttons %}

                            </div>

                        </div>

                        <div class="clearfix"></div>

                    </div>

                </div>

                <div class="clearfix"></div>

            </div>

            <div class="row-fluid">

                <div class="col-md-12">

                    {% include 'BraincraftedBootstrapBundle::flash.html.twig' %}

                </div>

                <div class="clearfix"></div>

            </div>

            <div class="row-fluid">

                {% block content %}
                {% endblock content %}

                <div class="clearfix"></div>

            </div>

            <div class="row-fluid">

                {% block footer %}
                {% endblock footer %}

                <div class="clearfix"></div>

            </div>

        </div>


    </div>


{% endblock body %}