{% extends 'FrontBundle:Layout:front.basic.layout.html.twig' %}

{% block body %}
            <div class="content">
                <div class="row">
                    <div class="welcome">
                        <div class="row container-row">
                            <div class="col-lg-6 col-md-7 col-sm-7">
                                <div class="welcome-info">
                                    <h1 class="welcome-title">Bienvenid@ a Dolopedia</h1>
                                    <p>La red de conocimiento sobre anestesiología y <br/>
                                    tratamiento del dolor que crece con tus aportaciones</p>
                                    <div class="btn-group">
                                        <a href="{{ path('public.user.registration.options') }}" class="btn btn-primary">Regístrate ahora</a>
                                        {#<a href="{{ path('hwi_oauth_service_redirect', {'service': 'facebook' }) }}" class="btn btn-primary">Conéctate con <span class="icon-facebook"></span></a>#}
                                    </div>
                                </div>
                                
                            </div>
                            <div class="col-lg-6 col-md-5 col-sm-5 relative">
