{% if wo_breadcrumbs()|length %}
    {% spaceless %}
        <ol id="{{ listId }}" class="{{ listClass }}" itemscope itemtype="http://schema.org/BreadcrumbList">
            {% for b in breadcrumbs %}
                <li {{ loop.last ? 'class="active"' }} itemprop="itemListElement" itemscope itemtype="http://schema.org/ListItem">
                    {% if b.url %}<a href="{{ b.url }}" itemprop="item"{% if linkRel is defined and linkRel|length %} rel="{{ linkRel }}"{% endif %}>{% endif %}
                        <span itemprop="name">{{- b.text | trans(b.translationParameters, translation_domain, locale) -}}</span>
                    {% if b.url %}</a>{% endif %}
                    <meta itemprop="position" content="{{ loop.index }}"/>
                </li>
            {% endfor %}
        </ol>
    {% endspaceless %}
{% endif %}
