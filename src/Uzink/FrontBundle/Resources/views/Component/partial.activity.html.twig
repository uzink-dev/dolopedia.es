{% trans_default_domain 'activity' %}

<div class="item">
    <img src="{{ image == 'dolopedia' ? asset('bundles/front/img/defaultImages/defaultCategory.jpg') : image | userHandler }}" class="thumb img-64 item-img">
    <p class="item-text">{{ message | raw }}</p>
    <p class="item-date">{{ 'activity.createdAt' | trans({'%date%': createdAt|date('d/m/Y'), '%hour%': createdAt|date('H:i')}) }}</p>
    <div class="clearfix"></div>
</div>